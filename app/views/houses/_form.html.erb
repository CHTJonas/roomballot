<%= form_with model: @house, local: true do |form| %>
  <% if @house.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>Error:</strong>
      <ul>
        <% @house.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group row">
    <%= form.label :name, class: :"col-sm-2 col-form-label" %><br>
    <div class="col-sm-10">
      <%= form.text_field :name, class: :"form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :size, class: :"col-sm-2 col-form-label" %><br>
    <div class="col-sm-10">
      <%= form.text_field :size, class: :"form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :price, class: :"col-sm-2 col-form-label" %><br>
    <div class="col-sm-10">
      <%= form.text_field :price, class: :"form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :information, class: :"col-sm-2 col-form-label" %><br>
    <div class="col-sm-10">
      <%= form.text_area :information, class: :"form-control" %>
    </div>
  </div>
  <div class="form-group row mt-2">
    <div class="col-sm-10">
      <%= form.submit class: :"btn btn-primary" %>
    </div>
  </div>
<% end %>
<div class="fixed-bottom bg-white">
  <p class="container"><%= link_to 'â‡¦ Back to Houses', houses_path %></p>
</div>
