<% content_for :title, "Latest News" %>
<div class="alert alert-primary" role="alert">
  <%= link_to 'New News Item', new_news_item_path if can? :create, NewsItem %>
</div>
<div class="row">
  <% @news_items.each do |news_item| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= link_to news_item.heading, news_item_path(news_item) %></h5>
          <p class="card-text"><%= news_item.content %></p>
          <p class="card-text"><small class="text-muted">Posted <%= time_ago_in_words news_item.created_at %> ago.</small></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
